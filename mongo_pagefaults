import urllib2
import sys
import os
import pymongo

def getServerStatus():
    host = os.environ.get("MONGO_HOST", "127.0.0.1")
    port = 27017
    c = pymongo.MongoClient(host, port)
    return c.admin.command('serverStatus', workingSet=True)

def doData():
    ss = getServerStatus()
    print "pagefaults.value", ss['extra_info']['page_faults']

